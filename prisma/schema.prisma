generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  endedAt   DateTime?

  whiteId   String?
  blackId   String?

  result    GameResult @default(ONGOING)

  moves     Move[]
}

model Move {
  id        Int    @id @default(autoincrement())
  gameId    String
  moveIndex Int

  fromRow   Int
  fromCol   Int
  toRow     Int
  toCol     Int

  game      Game   @relation(fields: [gameId], references: [id])
}

enum GameResult {
  ONGOING
  WHITE_WIN
  BLACK_WIN
  DRAW
}
